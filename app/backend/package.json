{
  "name": "voicecad-backend",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "description": "Backend service for VoiceCAD application",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --inspect",
    "dev:watch": "nodemon --watch src --ext js,json --ignore '*.test.js'",
    "test": "NODE_OPTIONS=--experimental-vm-modules S3_ENDPOINT=http://localhost:9000 AWS_ACCESS_KEY_ID=minioadmin AWS_SECRET_ACCESS_KEY=minioadmin DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ./node_modules/.bin/jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "migrate": "npx kysely-ctl migrate",
    "migrate:latest": "npx kysely-ctl migrate latest",
    "migrate:make": "npx kysely-ctl migrate:make",
    "migrate:list": "npx kysely-ctl migrate:list",
    "migrate:down": "npx kysely-ctl migrate:down",
    "migrate:rollback": "npx kysely-ctl migrate:rollback"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.511.0",
    "@aws-sdk/lib-storage": "^3.511.0",
    "@google/generative-ai": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "kysely-migration-cli": "^0.4.2",
    "multer": "^1.4.5-lts.1",
    "three": "^0.172.0",
    "uuid": "^11.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "kysely-ctl": "^0.10.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
