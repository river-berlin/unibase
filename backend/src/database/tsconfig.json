{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": ["ES2020"],
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "moduleDetection": "force",
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
} 