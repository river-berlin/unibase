{
  "name": "voicecad-backend",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "description": "Backend service for VoiceCAD application",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && cp src/swagger-output.json dist/ && npm run swagger && npm run generate-api-client && npm run build:copy-craftstool-openscad-libs",
    "build:copy-craftstool-openscad-libs": "mkdir -p dist/craftstool/openscad-libs && cd src/craftstool/openscad-libs && find . -type f -not -path '*/\\.*' -exec sh -c 'mkdir -p ../../../dist/craftstool/openscad-libs/$(dirname {}) && cp {} ../../../dist/craftstool/openscad-libs/{}' \\;",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --inspect",
    "dev:watch": "nodemon --watch src --ext js,json --ignore '*.test.js'",
    "pretest": "rm -rf dist && npm run build && npm install better-sqlite3 && npm rebuild better-sqlite3",
    "test": "NODE_ENV=test S3_ENDPOINT=http://localhost:9000 AWS_ACCESS_KEY_ID=minioadmin AWS_SECRET_ACCESS_KEY=minioadmin DOTENV_CONFIG_PATH=../../.env jest --config jest.config.js",
    "test:local-db": "TEST_USE_DEV_DB=true npm run test",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "migrate": "dbmate up",
    "migrate:new": "dbmate new",
    "migrate:up": "dbmate up",
    "migrate:down": "dbmate down",
    "migrate:status": "dbmate status",
    "migrate:dump": "dbmate dump",
    "migrate:wait": "dbmate wait",
    "swagger": "ts-node src/swagger.ts",
    "generate-api-client": "npx @hey-api/openapi-ts --input src/swagger-output.json --output ./client --name UnibaseApi --client @hey-api/client-fetch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@aws-sdk/client-s3": "^3.511.0",
    "@aws-sdk/lib-storage": "^3.511.0",
    "@google/generative-ai": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "dbmate": "^2.26.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "kysely-migration-cli": "^0.4.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.82.0",
    "sqlite3": "^5.1.7",
    "stripe": "^17.5.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "three": "^0.172.0",
    "uuid": "^11.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@hey-api/client-fetch": "^0.7.2",
    "@hey-api/openapi-ts": "^0.63.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "kysely-ctl": "^0.10.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
